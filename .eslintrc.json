{ // https://github.com/Microsoft/vscode-eslint/issues/284
    "parser": "@typescript-eslint/parser",
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "parserOptions": {
        "jsx": true,
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "fp"
    ],
    "rules": {
        "indent": [
            "error",
            4,
            {
                "MemberExpression": 0
            }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "no-var"                  : "error",
        "no-console"              : "off",
        "no-unused-vars"          : "off",
        "fp/no-arguments"         : "error",
        "fp/no-class"             : "error",
        "fp/no-delete"            : "error",
        "fp/no-events"            : "error",
        "fp/no-get-set"           : "error",
        "fp/no-let"               : "error",
        "fp/no-loops"             : "error",
        "fp/no-mutating-assign"   : "error",
        "fp/no-mutating-methods"  : "off",
        "fp/no-mutation"          : "error",
        "fp/no-nil"               : "off",
        "fp/no-proxy"             : "off",
        "fp/no-rest-parameters"   : "off",
        "fp/no-this"              : "error",
        "fp/no-throw"             : "error",
        "fp/no-unused-expression" : "off",
        "fp/no-valueof-field"     : "off"
    }
}